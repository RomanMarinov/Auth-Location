<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_rv_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <TextView
            android:id="@+id/tv_name_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:textSize="15sp"
            android:background="@drawable/rounded_textview"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:gravity="top"
            android:textColor="@android:color/white"
            android:text="name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_name_2"
            app:layout_constraintBottom_toBottomOf="parent"
            />


        <TextView
            android:id="@+id/tv_name_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:gravity="top"
            android:background="@drawable/rounded_textview"
            android:textColor="@android:color/white"
            android:text="name"
            app:layout_constraintLeft_toRightOf="@id/tv_name_1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_name_3"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <TextView
            android:id="@+id/tv_name_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:textSize="15sp"
            android:background="@drawable/rounded_textview"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:textColor="@android:color/white"
            android:text="name"
            android:gravity="top"
            app:layout_constraintLeft_toRightOf="@id/tv_name_2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_name_4"
            app:layout_constraintBottom_toBottomOf="parent"
            />


        <TextView
            android:id="@+id/tv_name_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:textSize="15sp"
            android:background="@drawable/rounded_textview"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:textColor="@android:color/white"
            android:text="name"
            android:gravity="top"
            app:layout_constraintLeft_toRightOf="@id/tv_name_3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


